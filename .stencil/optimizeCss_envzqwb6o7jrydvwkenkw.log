body {
  background-color: #282c34;
}
.bigWrapper {
  margin: 0 auto;
  font-family: "roboto";
  color: #abb2bf;
}

input {
  background: none;
  border-color: #61afef;
  color: #61afef;
}

.header {
  width: 100%;
  display: -ms-flexbox;
  display: flex;
  -ms-flex-pack: end;
  justify-content: flex-end;
  padding: 1rem 0;
  color: #61afef;
  font-weight: 800;
}

.headerText {
  margin-right: 0.5rem;
}

.sortBtn {
  text-transform: capitalize;
}

.sortBtn:hover {
  color: white;
  cursor: pointer;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

.tableHeader {
  display: -ms-flexbox;
  display: flex;
  padding: 0.5rem 0;
  color: #61afef;
  font-weight: 800;
}

.field {
  width: 300px;
}

.footer {
  display: -ms-flexbox;
  display: flex;
  -ms-flex-pack: center;
  justify-content: center;
  margin-top: 1rem;
}

.btn {
  width: 100px;
  text-align: center;
  border: 2px solid#61afef;
  color: #61afef;
  padding: 0.5rem;
  margin: 0 0.5rem;
  border-radius: 5px;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

.btn:hover {
  cursor: pointer;
  color: white;
  border-color: white;
}

.pageNumber {
  margin: 0 1rem;
  color: #61afef;
  font-size: 2rem;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

table {
  width: 100%;
}
tr {
  height: 25px;
}

tr:nth-child(even) {
  background-color: #21252b;
}
td {
  width: 300px;
}

.popUp {
  display: -ms-flexbox;
  display: flex;
  -ms-flex-pack: center;
  justify-content: center;
  color: tomato;
  font-weight: bold;
  font-size: 2rem;
}